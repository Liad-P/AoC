{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Debug Current File",
            "request": "launch",
            "mainClass": "${file}"
        },
        {
            "type": "java",
            "name": "Debug Main",
            "request": "launch",
            "mainClass": "Main",
            "args": "${input:yearNumber} ${input:dayNumber}",
            "classPaths": ["${workspaceFolder}/java/bin"],
            "cwd": "${workspaceFolder}"
        }
    ],
    "inputs": [
        {
            "id": "dayNumber",
            "type": "promptString",
            "description": "Which day do you want to debug?",
            "default": "1"
        },
        {
            "id": "yearNumber",
            "type": "promptString",
            "description": "Which year do you want to debug?",
            "default": "2025"
        }
    ]
}
